<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ejc.appli.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="25sp"
        android:layout_margin="20dp"
        android:text="@string/stringMainUneBlog"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="420dp"
            android:dividerHeight="0px"
            android:divider="@null"
            android:isScrollContainer="false"
            android:id="@+id/listeViewArticle"
            tools:targetApi="lollipop"
            tools:ignore="NestedScrolling">
        </ListView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_margin="20dp"
            android:text="@string/stringMainInterview"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="420dp"
            android:dividerHeight="0px"
            android:divider="@null"
            android:isScrollContainer="false"
            android:id="@+id/listeViewInterview"
            tools:targetApi="lollipop"
            tools:ignore="NestedScrolling">
        </ListView>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleEvent"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:text="@string/stringMainProchainement"/>

            
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:dividerHeight="2dp"
            android:divider="@null"
            android:isScrollContainer="false"
            android:id="@+id/listeViewEvent"
            tools:targetApi="lollipop"
            tools:ignore="NestedScrolling">
        </ListView>

    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>